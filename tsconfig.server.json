{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "noImplicitAny": false,
    "strict": true
  },
  "include": [
    "src/server/**/*",
    "src/lib/**/*",
    "src/api/**/*",
    "src/types/**/*"
  ],
  "exclude": ["node_modules"]
}
